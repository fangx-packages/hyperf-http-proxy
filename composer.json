{
    "name": "fangx/http-proxy",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "http proxy.",
    "authors": [
        {
            "name": "nfangxu",
            "email": "nfangxu@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.0",
        "ext-json": "*",
        "hyperf/guzzle": "^2.0",
        "hyperf/http-message": "^2.0",
        "hyperf/utils": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "hyperf/http-server": "^2.0",
        "hyperf/logger": "^2.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Fangx\\HttpProxy\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Fangx\\Tests\\": "tests/"
        }
    },
    "bin": [],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "./vendor/bin/phpunit -c phpunit.xml --color=always",
        "test-coverage": "php -d zend_extension=xdebug ./vendor/bin/phpunit -c phpunit.xml --color=always --coverage-html .codeCoverage"
    },
    "extra": {
        "hyperf": {
            "config": "Fangx\\HttpProxy\\ConfigProvider"
        }
    }
}
